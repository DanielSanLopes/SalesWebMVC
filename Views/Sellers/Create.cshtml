@model SalesWebMVC.Models.ViewModels.SellerFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>


<hr />

<div class="row">

    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Seller.Name" class="control-label">
                    <input required asp-for="Seller.Name" class="form-control" />
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Seller.Email" class="control-label">
                    <input required asp-for="Seller.Email" class="form-control" />
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Seller.BirthDate" class="control-label">
                    <input required asp-for="Seller.BirthDate" class="form-control" />
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Seller.BaseSalary" class="control-label">
                    <input required asp-for="Seller.BaseSalary" class="form-control" />
                </label>
            </div>

            <div class="form-group">
                <label asp-for="Seller.DepartmentId" class="control-label"></label>
                <select required asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))" >

                </select>

            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-control" />               
            </div>
        </form>
    </div>
</div>

